# Production Environment Configuration

# Application Environment
FLASK_ENV=production

# Flask Configuration
FLASK_DEBUG=False
FLASK_HOST=0.0.0.0
FLASK_PORT=8001

# Database Configuration
DATABASE_PATH=goals.db

# Frontend Configuration
# Update this to your production domain
VITE_API_URL=https://your-domain.com/api

# CORS Origins
# For local production testing, include localhost. Update for actual deployment.
CORS_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000,https://your-domain.com

# Logging
LOG_LEVEL=WARNING
LOG_FILE=logs/prod_server.log
